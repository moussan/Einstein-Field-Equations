# Database settings
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/einstein_field_equations

# JWT settings
SECRET_KEY=your-secret-key-for-jwt-please-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API settings
API_V1_STR=/api
PROJECT_NAME=Einstein Field Equations Computational Platform

# CORS settings (comma-separated list)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5000,https://efecp.example.com

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=logs/efecp.log

# Computation settings
MAX_CALCULATION_TIME=60
ENABLE_GPU_ACCELERATION=false

# Cache settings
REDIS_URL=redis://localhost:6379/0
CACHE_EXPIRATION=3600

# Firebase settings (optional)
# FIREBASE_API_KEY=your-firebase-api-key
# FIREBASE_AUTH_DOMAIN=your-firebase-auth-domain
# FIREBASE_PROJECT_ID=your-firebase-project-id
# FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket
# FIREBASE_MESSAGING_SENDER_ID=your-firebase-messaging-sender-id
# FIREBASE_APP_ID=your-firebase-app-id 